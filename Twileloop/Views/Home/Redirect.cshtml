@inject CDNRoot cdnRoot;
@model Redirect;

@{
    string hostname = "Site";
    try
    {
        string url = Model.RedirectTo;
        hostname = new Uri(url).Host.Split('.')[0];
        if (hostname.ToLower() == "www")
        {
            hostname = new Uri(url).Host.Split('.')[1];
        }
        hostname = char.ToUpper(hostname[0]) + hostname.Substring(1);
    }
    catch (Exception)
    { }
}
@{
    Layout = null;
    ViewData["Title"] = "To " + hostname;
    ViewData["Description"] = "Twileloop is redirecting";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- CSS Styles -->
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.1.2/styles/atom-one-dark-reasonable.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">

    <!-- PLUGINS STYLESHEET -->
    <link id="effect" href="@cdnRoot.SHARED/css/dropdown-effects/fade-down.css" media="all" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/menu.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/magnific-popup.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/owl.carousel.min.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/owl.theme.default.min.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/animate.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/style.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/responsive.css" rel="stylesheet">

    <!-- CUSTOM JSDELIVER CDN DELIVERY -->
    <link rel="stylesheet" href="@cdnRoot.SHARED/css/theme.css">
</head>


<body>

    <div class="page" id="page">
        <section class="hero-section division" style="margin-top:160px">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <section id="works" class="division">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-7 text-center">
                                    <div class="section-title">
                                        <img width="150px" src="/cdn/shared/images/redirect.png" alt="Server Down" />                                  
                                        <h2 class="mt-4">Taking You To <font style="color:lightseagreen">@hostname</font> ...</h2>
                                        <h5 class="section-title">
                                            This page will automatcly redirect you now. Ensure Javascript is allowed to run
                                        </h5>
                                        <p>twileloop.com</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </div>
    <script>
        setTimeout(() => {
            window.location.href = '@Model.RedirectTo';
        }, 1000);
    </script>
</body>

</html>