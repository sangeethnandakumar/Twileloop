@inject CDNRoot cdnRoot;
@model ErrorVM;

@{
    Layout = null;
    ViewData["Title"] = "Temporarly Down";
    ViewData["Description"] = "The Website Is Temporarly Down For Maintenance";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- CSS Styles -->
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.1.2/styles/atom-one-dark-reasonable.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">

    <!-- PLUGINS STYLESHEET -->
    <link id="effect" href="@cdnRoot.SHARED/css/dropdown-effects/fade-down.css" media="all" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/menu.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/magnific-popup.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/owl.carousel.min.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/owl.theme.default.min.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/animate.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/style.css" rel="stylesheet">
    <link href="@cdnRoot.SHARED/css/responsive.css" rel="stylesheet">

    <!-- CUSTOM JSDELIVER CDN DELIVERY -->
    <link rel="stylesheet" href="@cdnRoot.SHARED/css/theme.css">
</head>


<body>

    <div class="page" id="page">
        <section class="hero-section division" style="margin-top:160px">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <section id="works" class="division">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-7 text-center">
                                    <div class="section-title">
                                        <img src="/cdn/shared/images/server-down.png" alt="Server Down" />
                                        <h1 class="mt-4">The Site Is Temporarily Down</h1>
                                        <h3 class="section-title">
                                            It looks like our network is facing some confusion causing the server to slow down.
                                        </h3>
                                        <h4>
                                            The issue has been reported, and we're working to resolve it as quickly as possible.
                                        </h4>
                                        <h5 class="mt-4">
                                            In case the issue persists for a longer duration, Write us directly to: <font color="deeppink">support@twileloop.com</font>
                                        </h5>
                                    </div>
                                    @if (Model?.Referer is not null)
                                    {
                                        <a href="@Model.Referer" class="btn btn-stateblue tra-grey-hover last-link">Try Accessing Again</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </div>

</body>

</html>