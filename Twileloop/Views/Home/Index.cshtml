@using Packages.Twileloop.Helpers;
@model Packages.Twileloop.ViewModels.IndexViewModel;

@{
    ViewData["Title"] = "Official Twileloop Packages | Productivity NuGet Packages";
    ViewData["Description"] = "Free .NET NuGet packages for various needs from Sangeeth Nandakumar";
}

<section id="hero-6" class="hero-section division">
    <div class="container">
        <div class="row d-flex align-items-center">

            <section id="works" class="division">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <partial name="_Author" />

                            <hr style="margin-top:80px" />
                            <h1 class="section-title" style="margin-top:50px">Powerful Productive <font color="#59abf3">NuGet</font> Packages</h1>
                            <h4 class="section-title">Open Sourced | 100% Free For Commercial Use | MIT Licensed</h4>

                            @foreach (var package in Model.RecommendedPackages)
                            {
                                <article class="project-presentation-card" style="margin-top:100px">
                                    <center>
                                        <img src="@package.PackageIcon" alt="@package.Name Package Icon" class="project-image" style="width:100px !important" width="100" height="100">
                                        <div class="project-details mt-4">
                                            <h2 class="project-title">@package.Name</h2>
                                            <p class="project-presentation-subsubtitle">@package.Description.TrimWithEllipse(150)</p>
                                            <div class="social-links">
                                                <a href="https://packages.twileloop.com/@package.Name.ToLower()" target="_blank" class="btn btn-social btn-explore">
                                                    <i class="fa-regular fa-folder-open"></i>&nbsp;Explore Docs
                                                </a>
                                                <a href="https://www.nuget.org/packages/@package.Name.ToLower()" target="_blank" class="btn btn-social btn-nuget">
                                                    <i class="fa-solid fa-box-open"></i>&nbsp;NuGet
                                                </a>
                                            </div>
                                        </div>
                                    </center>
                                </article>
                            }

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>
